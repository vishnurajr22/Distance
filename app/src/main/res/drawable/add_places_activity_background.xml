<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:startColor="#9A28C4F3"
                android:endColor="#8F8300D5"
                android:type="linear"
                android:angle="270"
                android:gradientRadius="20dp"/>

            <stroke
                android:width="1dp"
                android:color="#D9D8E2" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>